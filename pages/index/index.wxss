/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}

.camera {
  width: 50rpx;
  height: 50rpx;
}

.search-box {
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid #dddddd;
  border-radius: 16rpx;
  width: 100%;
  position: relative;
}
.search-box input {
  /* line-height: 100rpx; */
  height: auto;
}
.search-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 15rpx;
}
.search-box text{
  width: 100%;
  padding: 0 160rpx 0 80rpx;
}
.search-box .camera {
  position: absolute;
  right: 110rpx;
}
.search-btn {
  position: absolute;
  right: 15rpx
}
.image-preview {
  width: 100%;
  min-height: 200rpx;
  max-height: 600rpx;
  margin-top: 40rpx;
  overflow: hidden;
  border-radius: 16px;
}
.image-preview image {
  border-radius: 16px;
}
.classify-box {
  width: 100%
}
.classify-box image {
  width: 200rpx;
  display: block;
  margin-top: 40rpx;
}
.discern-result {
  margin-top: 40rpx;
}
.result-title {
  padding: 10rpx 0;
  width: 100%;
  border-bottom: 1px solid #ddd;
}
.title-tip {
  font-size: 12px;
  color: #8d8d8d;
  margin-left: 10px;
}
.discern-result .keyword {
  /* margin-right: 40rpx; */
  height: 30px;
  line-height: 30px;
  margin-left: 15px
}
.type {
  margin-top: 40rpx;
}
.classify-detail {
  width: 100%;
  height: 900rpx;
  display: block;
  border-radius: 16px;
}

.contact-me {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  overflow: hidden;
  height: 24px;
  width: 60px;
  border: 1px solid #dddddd;
  background: #ffffff;
  border-radius: 24px;
  box-shadow: 0 0 8px #ccc
}
.contact-me .contact-btn {
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.contact-me .contact-mask {
  position: absolute;
  z-index: 10;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  line-height: 100%;
  font-size: 12px;
  color: #8d8d8d
}
.contact-mask .icon {
  font-size: 16px;
}